<h1>New restaurant</h1>

<%# Rails Form Helpers! %>
<%= form_with(model: @restaurant) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :address %>
  <%= form.text_field :address %>
  <%= form.label :rating %>
  <%= form.number_field :rating, max: 5, min: 0 %>
  <%= form.submit %>
<% end %>


<% unless "I'm not working with Rails" %>
  <form action="/restaurants">
    <label for="name">Name</label>
    <input type="text" id="name">
    <input type="submit" value="Create Restaurant">
  </form>
<% end %>
